<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033"
    android:orientation="vertical"
    android:weightSum="100"
    tools:context="com.RSPL.POS.Retailcardupdate">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="100.0"
        android:layout_alignParentTop="true"
        android:layout_above="@id/buttons_layout"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingTop="10dp"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Store Id"
                android:textColor="#000000"
                android:id="@+id/textViewstoteid"

                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editstoreid"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"

                android:layout_gravity="center_vertical"
                />



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Id"
                android:textColor="#000000"
                android:id="@+id/textViewId"

                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editid"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"

                android:layout_gravity="center_vertical"
                />



        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Card Type"
                android:textColor="#000000"
                android:id="@+id/textviewcardtype"

                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editcardtype"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"

                android:layout_gravity="center_vertical"
                />



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"

            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Point Range"
                android:textColor="#000000"
                android:id="@+id/textviewpointrange"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="5dp"

                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:ems="10"
                android:layout_marginEnd="3dp"
                android:id="@+id/editpointrange"
                android:textColor="#000000"
                android:textSize="18sp"
                android:paddingRight="5dp"
                android:background="@drawable/border_style"
                android:layout_gravity="center_vertical"
                />



        </LinearLayout>



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="80.0">





        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_loyalitydefine_number"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:background="@drawable/keyboard_border"
            android:keyBackground="@drawable/keyboard_border"
            />




    </LinearLayout>




    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14dp"
            android:text="UPDATE"
            android:id="@+id/buttonupdate"
            android:background="@drawable/button_background"
            android:textColor="#000000"
            android:layout_weight="2.0"
            android:textStyle="bold"

            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textSize="14dp"
            android:text="EXIT"
            android:background="@drawable/button_background"
            android:id="@+id/buttonexit"
            android:textColor="#000000"
            android:layout_weight="2.0"
            android:textStyle="bold"

            />
    </LinearLayout>



</LinearLayout>
