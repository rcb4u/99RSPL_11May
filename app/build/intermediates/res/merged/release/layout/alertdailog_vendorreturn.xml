    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="250dp"
        android:gravity="left"
        android:layout_weight="0.38">
        <Button

            android:layout_width="300px"
            android:layout_height="60px"
            android:id="@+id/WithPoButton"
            android:textColor="#ffffff"
            android:text=" With GRNID"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:layout_marginLeft="0px"
            android:layout_marginEnd="20px"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonfordialog"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="300px"
            android:layout_marginLeft="0px"
            android:layout_height="60px"
            android:id="@+id/WithoutPObutton"
            android:textColor="#ffffff"
            android:text=" Without GRNID"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonfordialog"
            />
        <!--  <EditText
              android:layout_marginTop="20dp"
              android:layout_marginLeft="0px"
              android:layout_width="300px"
              android:textColor="#000000"
              android:layout_height="40px"
              android:inputType="number"
              android:id="@+id/EnterInvoicenoforVendorReturn"
              android:hint="Please Enter PurchaseOrderNo"
              android:background="@drawable/border_style"/>-->
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="260px"
            android:layout_height="40px"
            android:layout_marginLeft="30px"
            android:background="@drawable/border_style"
            android:id="@+id/VendororDistributorNameforVendorReturn"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="260px"
            android:layout_height="40px"
            android:layout_marginLeft="30px"
            android:background="@drawable/border_style"
            android:id="@+id/Last3InvoiceNoVendorReturn"
            android:layout_alignParentStart="true" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="125px"
                android:layout_marginLeft="0px"
                android:layout_height="50px"
                android:id="@+id/submitbtn"
                android:textColor="#ffffff"
                android:text=" SUBMIT "
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:textSize="@dimen/textsize"
                android:background="@drawable/shapebuttonfordialog"

                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="125px"
                android:layout_marginLeft="50px"
                android:layout_height="50px"
                android:id="@+id/Cancelbtn"
                android:textColor="#ffffff"
                android:text="CANCEL "
                android:fontFamily="sans-serif"
                android:onClick="view"
                android:textSize="@dimen/textsize"
                android:background="@drawable/shapebuttonfordialog"

                />
        </LinearLayout>
