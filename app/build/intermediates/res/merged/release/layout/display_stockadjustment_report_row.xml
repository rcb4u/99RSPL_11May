<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="210.0"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvProd_Nm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvQty"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:textAlignment="viewEnd"
                android:layout_gravity="center"
                android:gravity="center_vertical"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="37.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvMrp"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:textAlignment="viewEnd"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvExp_Date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvBatch_No"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="19.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvDays_Left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportTotal"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:textAlignment="viewEnd"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

