<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:id="@+id/layout_color"

    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_weight="100.0"
        android:paddingTop="5dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Store_Id"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/store_id"

                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHighlight="#Ffffff"
                android:ems="10"
                android:id="@+id/displaystore"
                android:textSize="@dimen/smalltext"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Total_Bill_Value"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textView5"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <!-- <Spinner
                 android:layout_width="0dp"
                 android:layout_height="30dp"
                 android:layout_weight="0.6"
                 android:inputType="number"
                 android:textColor="#000000"
                 android:textColorHighlight="#ffffff"
                 android:hint=""
                 android:maxLength="1"
                 android:ems="10"
                 android:id="@+id/mrp"
                 android:textSize="20px"
                 android:layout_gravity="center_vertical"
                 android:background="@drawable/border_style" />-->
            <EditText
                android:id="@+id/displaytotalbillvalue"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:singleLine="true"
                android:focusable="true"
                android:maxLength="20"
                android:inputType="text"
                android:textColor="#000000"
                android:layout_weight="0.3"
                android:background="@drawable/border_style"
                android:textSize="20px"
                android:imeOptions="flagNoExtractUi"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Discount"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textView9"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:inputType="text"
                android:textColor="#000000"
                android:focusable="true"
                android:imeOptions="flagNoExtractUi"

                android:hint=""
                android:maxLength="20"
                android:ems="10"
                android:id="@+id/displaydiscount"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text=" Net_Bill_Payable"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textView1"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:inputType="text"
                android:textColor="#000000"
                android:focusable="true"
                android:imeOptions="flagNoExtractUi"

                android:hint=""
                android:maxLength="20"
                android:ems="10"
                android:id="@+id/displaynetbillpayable"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Amount_Received"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textVie"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <!-- <Spinner
                 android:layout_width="0dp"
                 android:layout_height="30dp"
                 android:layout_weight="0.6"
                 android:inputType="number"
                 android:textColor="#000000"
                 android:textColorHighlight="#ffffff"
                 android:hint=""
                 android:maxLength="1"
                 android:ems="10"
                 android:id="@+id/mrp"
                 android:textSize="20px"
                 android:layout_gravity="center_vertical"
                 android:background="@drawable/border_style" />-->
            <EditText
                android:id="@+id/displayamountreceived"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:singleLine="true"
                android:maxLength="20"
                android:textColor="#000000"
                android:focusable="true"
                android:imeOptions="flagNoExtractUi"

                android:inputType="text"
                android:layout_weight="0.3"
                android:background="@drawable/border_style"
                android:textSize="20px"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Amount_Paid_Back"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textViewinv"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.3"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHighlight="#Ffffff"
                android:hint=""
                android:focusable="true"
                android:imeOptions="flagNoExtractUi"

                android:maxLength="20"
                android:ems="10"


                android:id="@+id/displayamountpaidback"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:text="Footer"
                android:textColor="#000000"
                android:textStyle="bold"
                android:id="@+id/textViewsales"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="80dp"


                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.6"
                android:inputType="number"
                android:textColor="#000000"
                android:textColorHighlight="#Ffffff"
                android:hint=""
                android:maxLength="50"
                android:digits="1,2,3,4,5"

                android:ems="10"
                android:id="@+id/displayfooter"
                android:textSize="@dimen/smalltext"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_above="@+id/buttons_layout"
        >




        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_bill_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true"
            android:visibility="gone"
            android:background="@drawable/keyboard_border"
            android:keyBackground="@drawable/keyboard_border"
            />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="3.0"
        android:layout_alignParentBottom="true">



        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/Store_update"
            android:textColor="#000000"
            android:textSize="@dimen/textsize"
            android:text="UPDATE"
            android:background="@drawable/shapebuttonsales"
            android:layout_weight="1.5"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="EXIT"
            android:textSize="@dimen/textsize"
            android:textColor="#000000"
            android:id="@+id/Store_exit"
            android:background="@drawable/shapebuttonsales"
            android:layout_weight="1.5"
            />
    </LinearLayout>


</LinearLayout>