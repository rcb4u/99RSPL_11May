<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033"
    android:clickable="false"
    android:divider="@android:color/background_light"
    android:orientation="vertical"
    android:weightSum="100.0"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4a4a4a"
        android:weightSum="270.0"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvUserNm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="USER NAME"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTriId"
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="TRANSACTION ID"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="PRODUCT NAME"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBatch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="BATCH NO"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="EXP DATE"
            android:layout_weight="32.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSPrice"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="S PRICE"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="QTY"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUnit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:layout_weight="30.0"
            android:text="UOM"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:layout_marginEnd="8dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="TOTAL"
            android:layout_weight="30.0"
            android:layout_marginLeft="10dp"
            android:textColor="#ffffff"
            android:textSize="14px"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearlayout1"
        android:orientation="vertical"
        android:layout_weight="100.0"
        android:textColor="#000000">

        <ListView
            android:id="@+id/lv_SaleReport"
            android:layout_weight="10.0"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f2ede4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"



                >

                <TextView
                    android:layout_width="74px"
                    android:layout_height="18px"
                    android:layout_weight="0.7"
                    android:text="Total Items"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text"
                    android:paddingLeft="10dp"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:weightSum="1.0"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"
                    android:id="@+id/ReportSalesTotalitem"
                    android:textSize="18px"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:gravity="left" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Grand Total"
                    android:textColor="#000000"
                    android:id="@+id/discount_text9"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:id="@+id/ReportSalesGrandTotal"
                    android:textStyle="normal"
                    android:textSize="18px"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/layout3"
        android:paddingTop="1px"

        >
        <Button
            android:layout_width="225px"
            android:layout_height="50px"
            android:layout_weight="20"
            android:background="#009985"
            android:inputType="number"
            android:textColor="#000000"
            android:text="Email"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/emailbtn"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_background"
            android:onClick="view"
            />
    </LinearLayout>




</LinearLayout>



