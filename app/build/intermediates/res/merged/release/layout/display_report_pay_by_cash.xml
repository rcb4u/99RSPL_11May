<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="240.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportUser_Nm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:paddingLeft="7dp"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportVend_Nm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center"
            android:gravity="center_vertical"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportAmnt_Paid"
            android:layout_width="150px"
            android:layout_height="30dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:textAlignment="viewEnd"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportAmnt_Recvd"
            android:layout_width="150px"
            android:layout_height="30dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center"
            android:textAlignment="viewEnd"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="38.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportAmnt_Due"
            android:layout_width="150px"
            android:layout_height="30dp"
            android:text=""
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:textAlignment="viewEnd"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/reportLast_Update"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/report_reason"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/report_days"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="0"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

    </LinearLayout>
</LinearLayout>