<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100.0"
    android:background="#ff9033">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="90.0"
        android:id="@+id/linearLayout">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp" >

            <TextView
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:text="Ad Text*"
                android:textColor="#000000"
                android:id="@+id/adtext"
                android:textStyle="bold"
                android:textSize="25px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="30dp" />

            <EditText
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.7"
                android:inputType="textCapWords"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ, ,.,!@#$%^*()_+"
                android:ems="10"
                android:id="@+id/adedit"
                android:textSize="14px"
                android:focusable="true"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:hint="Enter Ad Text"
                android:layout_marginEnd="30dp"
                />




        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:text="Start Date*"
                android:textColor="#000000"
                android:id="@+id/startdate"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="30dp" />

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtStartDate"
                android:textSize="14px"
                android:hint="@string/hint_start"
                android:textColorHint="#000000"
                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:drawableRight="@drawable/clander"
                android:focusable="false"
                android:layout_marginEnd="30dp"
                />

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/timepicker"
                android:textSize="14px"
                android:textColorHint="#000000"
                android:text="Select Start Time"

                android:textColor="#000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:drawableRight="@drawable/clander"
                android:focusable="false"
                android:layout_marginEnd="30dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            >

            <TextView
                android:layout_width="550dp"
                android:layout_height="wrap_content"
                android:text="End Date*"
                android:textColor="#000000"
                android:id="@+id/enddate"
                android:textStyle="bold"
                android:textSize="20px"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="30dp"/>

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/txtEndDate"
                android:textSize="14px"
                android:textColor="#000000"
                android:textColorHint="#000000"
                android:hint="@string/hint_end"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:drawableRight="@drawable/clander"
                android:focusable="false"
                android:layout_marginEnd="30dp">

                <requestFocus />

            </EditText>

            <EditText
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/endtime"
                android:textSize="14px"
                android:textColor="#000000"
                android:text="Select End Time"
                android:textColorHint="#000000"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:drawableRight="@drawable/clander"
                android:focusable="false"
                android:layout_marginEnd="30dp">

                <requestFocus />

            </EditText>

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10.0"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="SUBMIT"
            android:id="@+id/sbtbutton"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"
            android:background="@drawable/button_background"
            android:layout_weight="10.0" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:text="CANCEL"
            android:id="@+id/canclbutton"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold"
            android:onClick="view"
            android:background="@drawable/button_background"
            android:layout_weight="10.0" />
    </LinearLayout>


</LinearLayout>