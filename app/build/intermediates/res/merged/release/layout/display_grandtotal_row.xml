<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Sub"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:weightSum="100.0">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:textAlignment="textStart">

        <TextView
            android:id="@+id/rowtvUser_Nm"
            android:layout_width="155px"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px" />

        <TextView
            android:id="@+id/rowtvTri_Id"
            android:layout_width="165px"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px" />

        <TextView
            android:id="@+id/rowtvProdNm"
            android:layout_width="200px"
            android:layout_height="fill_parent"
            android:gravity="left"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px"

            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/rowtvBatchNo"
            android:layout_width="175px"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:id="@+id/rowtvExpDate"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="EXP DATE"
            android:textColor="#000000"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/rowtvSPrice"
            android:layout_width="115px"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:text="S PRICE"
            android:textColor="#000000"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/rowtvQty"
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="QTY"
            android:textColor="#000000"
            android:textSize="16px"/>

        <TextView
            android:id="@+id/rowtvUOM"
            android:layout_width="105px"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px" />

        <TextView
            android:id="@+id/rowtvGrand_Total"
            android:layout_width="130px"
            android:layout_height="match_parent"
            android:gravity="right"
            android:text="Grand Total"
            android:textColor="#000000"
            android:textSize="16px" />

    </LinearLayout>

</LinearLayout>

