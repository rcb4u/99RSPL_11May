<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="180.0"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_weight="10.0">

        <TextView
            android:id="@+id/rowStoreMainuser_Nm"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="14px"
            android:layout_weight="30.0"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/rowStoreMaintvAd_Main_Id"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="14px"
            android:layout_weight="30.0"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/rowStoreMainAd_Desc"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="14px"
            android:layout_weight="30.0"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/rowStoreMaintvAd_Cst_Slb1"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:textSize="14px"
            android:layout_weight="30.0"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/rowStoreMaintvAd_Cst_Slb2"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:layout_weight="30.0"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

        <TextView
            android:id="@+id/rowStoreMaintvAd_Cst_Slb3"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="Ad Id"
            android:textColor="#000000"
            android:layout_weight="30.0"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:paddingRight="10dp"/>

    </LinearLayout>
</LinearLayout>