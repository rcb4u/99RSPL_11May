

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffdd0"
    android:weightSum="100">

    <LinearLayout
        android:id="@+id/lay1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        >
        <ImageView
            android:layout_width="100px"
            android:layout_height="50dp"
            android:src="@drawable/mcash"/>
       <!-- <TextView
            android:id="@+id/Etcash"
            android:layout_marginTop="50px"
            android:layout_marginLeft="260dp"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:inputType="textEmailAddress"
            android:hint="0"
            android:textSize="18px"
            android:gravity="center"
            android:paddingBottom="35dp"

            android:layout_weight="0.04" />
-->
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="1.0"
        android:paddingRight="30dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Merchant Id"
            android:textColor="#000000"
            android:id="@+id/merchaantid_tv"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="80dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:ems="10"
            android:id="@+id/mechantid"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1.0"
        android:paddingRight="30dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Pin Code"
            android:textColor="#000000"
            android:id="@+id/pincode_tv"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="80dp"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:ems="10"
            android:id="@+id/pincode"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1.0"
        android:paddingRight="30dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Mobile No"
            android:textColor="#000000"
            android:id="@+id/mobileno_tv"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="80dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:ems="10"
            android:id="@+id/mobileno"
            android:textSize="15px"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:weightSum="1.0"
        android:paddingRight="30dp"

        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Amount"
            android:textColor="#000000"
            android:id="@+id/amount_tv"
            android:textSize="20px"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="80dp"
            />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textColor="#000000"
            android:ems="10"
            android:id="@+id/amount"
            android:textSize="15px"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="40dp">

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_marginLeft="150px"
            android:layout_height="30dp"
            android:id="@+id/submitForWallet"
            android:textColor="#ffffff"
            android:text=" SUBMIT "
            android:layout_marginEnd="10dp"
            android:ems="12"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:background="#ff3300"

            />

        <Button
            android:layout_marginTop="10dp"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/cancelForWallet"
            android:textColor="#ffffff"
            android:text=" CANCEL "
            android:ems="12"
            android:fontFamily="sans-serif"
            android:onClick="view"
            android:background="#ff3300"

            />
    </LinearLayout>
</LinearLayout>


