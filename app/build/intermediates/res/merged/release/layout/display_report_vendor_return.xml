<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="250.0"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_weight="10.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportuser_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportvend_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_reason"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportprod_name"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_No"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_date"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_price"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_qty"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_unit"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_total"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="18px"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp"/>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>