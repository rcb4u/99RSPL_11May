<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:weightSum="90.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvUser_Nm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:paddingLeft="47dp"
                android:layout_gravity="left"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvDstr_Nm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="left"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvDstr_Act"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="left"
                android:gravity="center_vertical" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>