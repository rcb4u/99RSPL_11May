<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.retail_99_solutions.Purchase_Page"
    android:orientation="vertical"
    android:id="@id/layout_color"
    android:background="#FF9033">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="90.0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SaleReportSales"
            android:text="Sales Report"
            android:textColor="#000000"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="34.5"
            android:src="@drawable/sales_report"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/SaleReportSalesReturn"
            android:text="Sales Return Report"
            android:textColor="#000000"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:src="@drawable/sales_returnreport"
            android:scaleType="fitCenter"/>

    </LinearLayout>
</LinearLayout>
