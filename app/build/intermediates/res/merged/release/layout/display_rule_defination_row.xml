<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub"
    >
    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2ede4"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_weight="10.0"
        android:layout_below="@id/layout1"
        >

        <TextView android:id="@+id/rowtvSNO"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:layout_alignParentLeft="true"
            android:text="De"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>
        <TextView
            android:id="@+id/rowCard_type"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:text="India is my country"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge">

            ></TextView>

        <TextView android:id="@+id/rowtvBasevalue"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:paddingLeft="5dp"
            android:text="1234456787"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="14px"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>
        <TextView android:id="@+id/rowtvPer_ton_points"
            android:layout_height="30dp"
            android:layout_width="120dp"
            android:text="99999999"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:textSize="20px"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceLarge"
            ></TextView>


    </LinearLayout>
</RelativeLayout>