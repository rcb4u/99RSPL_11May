<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffdd0"
    android:padding="15dp"
    > <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="10dp"
    android:weightSum="1.0"
    android:paddingLeft="10dp"

    >

    <Button
        android:layout_width="16px"
        android:layout_height="16px"
        android:textColor="#FFFFFF"
        android:id="@+id/clear_dialog_button"
        android:fontFamily="sans-serif"
        android:background="@drawable/cross_arrow_icon"
        android:onClick="view"
        android:layout_marginLeft="450dp"

        />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:inputType="number"
        android:textColor="#000000"
        android:text="Total Amount"
        android:ems="10"
        android:id="@+id/totalamounttv"
        android:textSize="14px"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_vertical"
        />

    <TextView
        android:id="@+id/totalamount"
        android:layout_width="390px"
        android:layout_height="40px"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:gravity="left"
        android:textColor="#000000"
        android:background="@drawable/border_style"
        android:inputType="number" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:textColor="#000000"
        android:text="Total Discount%"
        android:ems="10"
        android:id="@+id/chequeamt_tv"
        android:textSize="14px"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_vertical"
        />


    <EditText
        android:id="@+id/discountspinner"
        android:layout_width="390px"
        android:layout_height="40px"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:gravity="left"
        android:background="@drawable/border_style"
        android:inputType="numberDecimal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:inputType="number"
        android:textColor="#000000"
        android:text="Total Discount Amount"
        android:ems="10"
        android:id="@+id/totadiscamount_tv"
        android:textSize="14px"
        android:gravity="left"
        android:fontFamily="sans-serif"
        android:layout_gravity="center_vertical"
        />




    <EditText
        android:id="@+id/discountamount"
        android:layout_width="390px"
        android:layout_height="40px"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="4dp"
        android:visibility="visible"
        android:paddingTop="10dp"
        android:textColor="#000000"
        android:gravity="left"
        android:background="@drawable/border_style"
        android:inputType="numberDecimal" />




