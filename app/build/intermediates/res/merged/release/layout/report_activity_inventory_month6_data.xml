<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:id="@id/layout_color"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="240.0"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="USER NAME"
                android:textColor="#ffffff"
                android:id="@+id/tvNm"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="PRODUCT NAME"
                android:textColor="#ffffff"
                android:id="@+id/tvId"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="BATCH NO"
                android:textColor="#ffffff"
                android:id="@+id/tvDesc"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="EXPIRY DATE"
                android:textColor="#ffffff"
                android:id="@+id/tvStart"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="QUANTITY"
                android:textColor="#ffffff"
                android:id="@+id/tvEnd"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="DAYS ARE LEFT"
                android:textColor="#ffffff"
                android:id="@+id/tvSlb1"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="P PRICE"
                android:textColor="#ffffff"
                android:id="@+id/tvPrice"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:paddingLeft="7dp"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#4a4a4a">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="TOTAL"
                android:textColor="#ffffff"
                android:id="@+id/tvTotal"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:paddingLeft="7dp"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:layout_weight="100"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_InventoryReport" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f2ede4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"



                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Total Items"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:weightSum="1.0"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"
                    android:id="@+id/ReportPurchasingTotalitem"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:gravity="left" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Grand Total"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text9"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:id="@+id/ReportPurchasingGrandTotal"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



</LinearLayout>
