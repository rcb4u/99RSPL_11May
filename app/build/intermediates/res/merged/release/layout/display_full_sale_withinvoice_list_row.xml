<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="120.0"
        android:layout_alignParentStart="true"
        android:textAlignment="textStart"
        android:layout_weight="10.0">


            <TextView
                android:id="@+id/rowtvProdNm"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rowtvBatch"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="BATCH NO"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rowtvExp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="EXP DATE"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rowtvPrice"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="S PRICE"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rowtvQty"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="Qty"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>

            <TextView
                android:id="@+id/rowtvMrp"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:text="MRP"
                android:textColor="#000000"
                android:textSize="14px"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingRight="10dp"/>



    </LinearLayout>
</LinearLayout>