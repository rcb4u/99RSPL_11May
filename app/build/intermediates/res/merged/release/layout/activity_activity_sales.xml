<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Master_Page"
    android:orientation="vertical"
    android:weightSum="100.0"
    android:id="@id/layout_color"
    android:background="#FF9033">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50.0"
        android:paddingBottom="5dp"
        android:paddingTop="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:id="@+id/layer">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/dayopenimage"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/dayopening"
            android:paddingTop="10dp"
            android:background="@drawable/imagebutton_layout"
            android:layout_weight="25.0"
            android:scaleType="fitCenter"
            android:onClick="View"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Tenderimage"
            android:src="@drawable/dayclosing"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton11"
            android:layout_toEndOf="@+id/imageButton11"
            android:layout_alignBottom="@+id/imageButton13"
            android:layout_weight="25.0"
            android:layout_marginLeft="10dp"
            android:paddingTop="10dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:onClick="View"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50.0"
        android:paddingRight="5dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/layer"
        android:paddingBottom="10dp"
        android:scaleType="fitCenter"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/salesreturnpage"
            android:src="@drawable/salesreturns"
            android:background="@drawable/imagebutton_layout"
            android:layout_below="@+id/imageButton12"
            android:layout_alignEnd="@+id/imageButton12"
            android:layout_weight="25.0"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter"
            android:onClick="View"
            />
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/salesimage"
            android:src="@drawable/sales"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton12"
            android:layout_marginEnd="10dp"
            android:layout_weight="25.0"
            android:scaleType="fitCenter"
            android:onClick="View"/>
    </LinearLayout>
</LinearLayout>