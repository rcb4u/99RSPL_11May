        <EditText
            android:layout_width="170px"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:text="MRP"
            android:ems="10"
            android:maxLength="7"
            android:id="@+id/mrp"
            android:selectAllOnFocus="true"

            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="center"
            android:imeOptions="flagNoExtractUi"

            />

        <EditText
            android:layout_width="170px"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="S PRICE"
            android:selectAllOnFocus="true"
            android:ems="10"
            android:maxLength="7"
            android:id="@+id/sprice"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"

            />

        <EditText
            android:layout_width="170px"
            android:layout_height="fill_parent"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:text="Discount"
            android:maxLength="6"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:id="@+id/discountsale"
            android:focusable="true"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"

            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <EditText
            android:layout_width="170px"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:text="QTY"
            android:maxLength="4"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:id="@+id/quantity"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"

            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_width="90px"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:text="stock"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/quantitystock"
            android:textSize="@dimen/displaytextsize"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:text="discamt"
            android:visibility="invisible"
            android:maxLength="4"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:id="@+id/discounttotal"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:inputType="number"
            android:textColor="#000000"
            android:text="Discamt"
            android:visibility="invisible"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/discountamount"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />


        <TextView
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:inputType="number"
            android:textColor="#000000"
            android:text="convfact"
            android:visibility="invisible"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/conersionfact"
            android:textSize="1px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <!--  <TextView
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.2"
              android:inputType="number"
              android:textColor="#ffffff"
              android:text="Amount"
              android:ems="10"
              android:id="@+id/amount"
              android:textSize="12px"
              android:fontFamily="sans-serif"
              android:layout_gravity="center_vertical"
              />
-->
        <TextView
            android:layout_width="152px"
            android:layout_height="fill_parent"
            android:textColor="#000000"
            android:text="UOM"
            android:focusable="false"
            android:id="@+id/uom"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_width="155px"
            android:layout_height="fill_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:focusable="false"
            android:text="Total"
            android:ems="10"
            android:id="@+id/total"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        <ImageButton

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:src="@drawable/cancelbtn"
            android:id="@+id/deleteButton" />
    </LinearLayout>


</LinearLayout>