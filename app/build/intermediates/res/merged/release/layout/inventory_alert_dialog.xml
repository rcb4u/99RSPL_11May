    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="210dp"
        android:gravity="left"
        android:paddingTop="10dp"

        android:layout_weight="0.40">
        <Button

            android:layout_width="280px"
            android:layout_height="55px"
            android:id="@+id/po"
            android:textColor="#ffffff"
            android:text="INVENTORY BY DISCOUNT"
            android:visibility="visible"
            android:textSize="@dimen/Buttontextsize"
            android:gravity="center"
            android:onClick="view"
            android:layout_marginLeft="120px"

            android:background="@drawable/shapebutton_dialog"
            />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="280px"
            android:layout_marginLeft="120px"
            android:layout_height="55px"
            android:id="@+id/withpo"
            android:textColor="#ffffff"
            android:text=" INVENTORY BY TOTAL"
            android:onClick="view"
            android:textSize="@dimen/Buttontextsize"

            android:background="@drawable/shapebutton_dialog"
            />
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="280px"
            android:layout_marginLeft="120px"
            android:layout_height="55px"
            android:id="@+id/HoldButton"
            android:textColor="#ffffff"
            android:text="Hold"
            android:onClick="view"
            android:textSize="@dimen/Buttontextsize"
            android:visibility="gone"
            android:background="@drawable/shapebutton_dialog"
            />


        <Button
            android:layout_marginTop="20dp"
            android:layout_width="280px"
            android:layout_marginLeft="120px"
            android:layout_height="55px"
            android:id="@+id/integrationwithdistibutor"
            android:textColor="#ffffff"
            android:text="INTEGRATION WITH DISTRIBUTOR"
            android:onClick="view"
            android:textSize="@dimen/Buttontextsize"

            android:background="@drawable/shapebutton_dialog"
            />



        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="120px"
            android:background="@drawable/border_style"
            android:id="@+id/VendororDistributorName"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="120px"
            android:background="@drawable/border_style"
            android:id="@+id/Last3InvoiceNo"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="120px"
            android:background="@drawable/border_style"
            android:id="@+id/HoldPurchaseNoforinventory"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="120px"
            android:background="@drawable/border_style"
            android:id="@+id/Integrationdistributorno"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="250px"
            android:layout_height="60px"
            android:layout_marginLeft="120px"
            android:background="@drawable/border_style"
            android:id="@+id/Integrationdocumentno"
            android:layout_alignParentStart="true" />





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="90px"
                android:layout_height="40px"
                android:id="@+id/submitbtn"
                android:textColor="#000000"
                android:text="SUBMIT"
                android:onClick="view"
                android:background="@drawable/shapebutton_dialog"

                />


            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="90px"
                android:layout_height="40px"
                android:id="@+id/submitbtnforintegration"
                android:textColor="#000000"
                android:text="SUBMIT"
                android:textSize="@dimen/Buttontextsize"

                android:onClick="view"
                android:background="@drawable/shapebutton_dialog"

                />

            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="55px"
                android:layout_height="40px"
                android:id="@+id/submitbtnForHold"
                android:textColor="#000000"
                android:text=" SUBMIT "
                android:onClick="view"
                android:textSize="@dimen/Buttontextsize"
                android:background="@drawable/shapebutton_dialog"

                />



            <Button
                android:layout_marginTop="20dp"
                android:layout_width="110px"
                android:layout_marginLeft="80px"
                android:layout_height="40px"
                android:id="@+id/cancelinventoryalert"
                android:visibility="visible"
                android:textColor="#000000"
                android:text="CANCEL"
                android:onClick="view"
                android:background="@drawable/shapebutton_dialog"
                />






            />
        </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50px"
            android:layout_width="260px"
            android:textColor="#000000"
            android:visibility="invisible"
            android:layout_height="10px"
            android:inputType="text"
            android:id="@+id/EnterInvoiceno"
            android:hint="Please Enter LastInvoiceno"
            android:background="@drawable/border_style"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>