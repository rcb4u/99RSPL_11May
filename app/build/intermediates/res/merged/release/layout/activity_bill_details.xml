                    />

                <TextView
                    android:layout_width="180px"
                    android:layout_height="45px"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:focusable="false"
                    android:text="Paid"
                    android:ems="10"
                    android:id="@+id/paid"
