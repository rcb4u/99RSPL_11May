                    android:layout_height="45px"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:focusable="false"
                    android:text="Bill Amount"
                    android:ems="10"
                    android:id="@+id/billamount"
                    android:textSize="@dimen/textsize"
                    android:gravity="center"
