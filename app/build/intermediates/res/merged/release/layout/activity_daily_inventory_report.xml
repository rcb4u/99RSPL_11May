<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:id="@id/layout_color"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:text="Today Date"
            android:textColor="#000000"
            android:id="@+id/from"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:paddingBottom="3dp"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <TextView
            android:id="@+id/InventoryDate"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:ems="10"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:paddingBottom="3dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="150.0"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#4a4a4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="USER NAME"
            android:textColor="#ffffff"
            android:id="@+id/tvNm"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:paddingLeft="7dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:background="#4a4a4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="PRODUCT NAME"
            android:textColor="#ffffff"
            android:id="@+id/tvId"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="BATCH NO"
            android:textColor="#ffffff"
            android:id="@+id/tvDesc"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="EXPIRY DATE"
            android:textColor="#ffffff"
            android:id="@+id/tvStart"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="QUANTITY"
            android:textColor="#ffffff"
            android:id="@+id/tvEnd"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

       <!-- <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="DAYS ARE LEFT"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:id="@+id/tvSlb1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="vertical"
        android:layout_weight="100"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_InventoryReport" />
    </LinearLayout>

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="15"
        android:layout_below="@+id/layout3"
        android:paddingTop="3px"

        >
        <Button
            android:layout_width="225px"
            android:layout_height="40px"
            android:layout_weight="20"
            android:background="@drawable/button_background"
            android:inputType="number"
            android:textColor="#000000"
            android:text="Email"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/emailbtn"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_background"
            android:onClick="view"
            />
    </LinearLayout>-->


</LinearLayout>
