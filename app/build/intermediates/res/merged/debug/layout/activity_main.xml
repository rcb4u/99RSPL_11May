    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.0"
        android:orientation="horizontal"
        android:weightSum="100.0"
        android:background="@drawable/border1">

        <!-- Linear layout inside one text view for POS, and one imageview for blinking effect-->

        <!--scrolling text-->
        <TextView
            android:id="@+id/scrolling_text_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="90.0"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#ffffffff"
            android:ellipsize="marquee"
            android:textSize="25dp"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:textAllCaps="true"
            android:background="@drawable/border"

            />

        <ImageView

            android:id="@+id/blinking_image_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10.0"
            android:layout_gravity="left"
            android:background="#ffffff"
            android:adjustViewBounds="true"
            android:fillViewport="true"
            android:src="@drawable/loading_activity"/>

        <Button
            android:id="@+id/MainActivitySync"
            android:onClick="Test"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="invisible"/>


    </LinearLayout>
