<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:id="@+id/searchlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.0"
        android:orientation="horizontal">


        <com.RSPL.POS.CustomAuto
            android:id="@+id/autoCompleteTextView"
            android:layout_width="280px"
            android:layout_height="35px"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:ems="10"
            android:textSize="15px"
            android:focusable="true"
            android:layout_gravity="center_vertical" />

    </LinearLayout>




    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10.0"
        android:weightSum="100.0"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:adjustViewBounds="true"
        android:fillViewport="true">



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45.0"
            android:background="#FFB74D">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:text="Product Name"
                android:textColor="#4A4A4A"
                android:id="@+id/tvProdctNm"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20.0"
            android:background="#FFB74D">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:text="MRP"
                android:textColor="#4A4A4A"
                android:id="@+id/tvMRP"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20.0"
            android:background="#FFB74D">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:text="Sale Price"
                android:textColor="#4A4A4A"
                android:id="@+id/tvPrice"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="15.0"
            android:background="#FFB74D">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.0"
                android:text="Active"
                android:textColor="#4A4A4A"
                android:id="@+id/tvActve"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:paddingRight="10dp" />

        </LinearLayout>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="90.0"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:layout_below="@+id/linearlayout1"
        android:paddingBottom="20dp">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/lv_ProductReport" />
    </LinearLayout>

</LinearLayout>
