<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="150.0">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:paddingLeft="7dp"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="28.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtv_Price"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="38.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtv_Qty"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="31.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtv_Last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtv_Unit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Ad Id"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>