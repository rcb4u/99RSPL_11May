<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:text="GRN Id"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="14dp"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.RSPL.POS.CustomAuto
            android:id="@+id/IndirectChequeIdTextView"
            android:layout_width="580dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="14px"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-, "
            android:hint="Select GRN Id"
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="200.0"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:text="VENDOR NAME"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvNm"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="PAID AMOUNT"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvPaidAmnt"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="RECEIVED AMOUNT"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvRcved"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="DUE AMOUNT"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvPaid"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="BANK NAME"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvRcvd"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="CHEQUE NO"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDue"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="REASON OF PAY"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvPay"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="DATE"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:id="@+id/tvDate"
            android:textColor="#ffffff"
            android:layout_weight="25.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_indirectChequeReport" />
    </LinearLayout>

</LinearLayout>
