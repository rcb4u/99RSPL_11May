<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.retail_99_solutions.Purchase_Page"
    android:orientation="vertical"
    android:background="#FF9033">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="50.0"
        android:paddingTop="10dp"
        android:id="@+id/layer"
        android:paddingBottom="10dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/advertisingimage"
            android:src="@drawable/ic_advertising"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/customerimage"
            android:src="@drawable/ic_customers"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/newsimage"
            android:src="@drawable/ic_news"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton16"
            android:layout_weight="34.5"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/salesreportimage"
            android:src="@drawable/sales"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton16"
            android:layout_weight="34.5"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/purchasereportimage"
            android:src="@drawable/purchasing"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageButton16"
            android:layout_weight="34.5"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:scaleType="fitCenter"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50.0"
        android:id="@+id/Layout_master2"
        android:orientation="horizontal"
        android:paddingBottom="5dp"

        android:paddingLeft="5dp"
        android:layout_below="@id/layer"
        android:scaleType="fitCenter"

        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Report_dist"
            android:src="@drawable/vendor"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton10"
            android:layout_weight="12.5"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:onClick="View"
            />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Report_localproduct"
            android:src="@drawable/localprod_img"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentBottom="true"
            android:layout_weight="12.5"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="5dp"
            android:scaleType="fitCenter"
            android:onClick="View"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Report_product"
            android:src="@drawable/product_img"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton9"
            android:layout_alignBottom="@+id/imageButton9"
            android:layout_weight="12.5"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:onClick="View"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/Report_localvendor"
            android:src="@drawable/localvendor_img"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton9"
            android:layout_alignBottom="@+id/imageButton9"
            android:layout_weight="12.5"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:onClick="View"/>



    </LinearLayout>

</LinearLayout>