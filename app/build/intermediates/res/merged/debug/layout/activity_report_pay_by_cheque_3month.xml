<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@id/layout_color"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="300.0"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">


            <TextView
                android:text="USER NAME"
                android:id="@+id/tvUserNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#4a4a4a">

            <TextView
                android:text="VENDOR NAME"
                android:id="@+id/tvDsbtrNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27.0"
            android:background="#4a4a4a">

            <TextView
                android:text="PAID"
                android:id="@+id/tvDsbtrAmnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="RECEIVED"
                android:id="@+id/tvDsbtrAmn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DUE"
                android:id="@+id/tvDsbtrAmunt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="BANK"
                android:id="@+id/tvBank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40.0"
            android:background="#4a4a4a">

            <TextView
                android:text="CHEQUE NO"
                android:id="@+id/tvCheque"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#4a4a4a">

            <TextView
                android:text="REASON"
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DATE"
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DAYS"
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:layout_weight="100"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_payByChequeReport" />
    </LinearLayout>

</LinearLayout>
