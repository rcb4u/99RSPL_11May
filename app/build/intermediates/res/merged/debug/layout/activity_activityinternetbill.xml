<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033"
    android:weightSum="100.0"
    tools:context="com.RSPL.POS.ShowfulldataActivity"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="90.0">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingRight="7dp">

            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Mobileno"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_weight="0.4"
                android:id="@+id/textView2"
                android:layout_alignParentStart="true"
                />
            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border_style"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:layout_weight="0.6"
                android:ems="3"
                android:textSize="30dp"
                android:layout_marginEnd="31dp"
                android:id="@+id/Mobileno"
                android:layout_alignEnd="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Order ID"
                android:textColor="#000000"
                android:layout_weight="0.4"
                android:paddingLeft="20dp"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:id="@+id/textView4"
                android:layout_alignEnd="@+id/OK" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:background="@drawable/border_style"
                android:layout_weight="0.6"
                android:textSize="30dp"
                android:ems="3"
                android:id="@+id/Productnm"
                android:layout_alignEnd="@+id/textView4"
                android:layout_marginEnd="31dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingRight="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/TicketId"
                android:text="Total"
                android:textColor="#000000"

                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_weight="0.4"
                android:paddingLeft="20dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:background="@drawable/border_style"
                android:layout_weight="0.6"
                android:textSize="30dp"
                android:ems="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/MRP"
                android:layout_alignBottom="@+id/textView3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingRight="18dp">

            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="ProductName:-"
                android:paddingLeft="20dp"
                android:textColor="#000000"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:layout_weight="0.4"
                android:id="@+id/textView9"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:paddingTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text=""
                android:background="@drawable/border_style"
                android:layout_weight="0.6"
                android:ems="7"
                android:textSize="30dp"
                android:id="@+id/Productname"
                android:layout_alignEnd="@+id/textView4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingRight="20dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Status1"
                android:layout_weight="0.4"
                android:fontFamily="sans-serif"
                android:textSize="20px"
                android:textColor="#000000"
                android:paddingLeft="20dp"
                android:text="Status"
                android:layout_above="@+id/textView5"
                android:layout_toEndOf="@+id/OK" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/Status"
                android:textSize="30dp"
                android:background="@drawable/border_style"
                android:layout_weight="0.6"
                android:ems="3"
                android:text=""
                android:layout_alignBottom="@+id/textView5"
                android:layout_toEndOf="@+id/OK" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="10.0"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:text="Order Delivered"
            android:layout_weight="10.0"
            android:id="@+id/OK"
            android:fontFamily="sans-serif"
            android:textSize="20px"
            android:background="@drawable/button_border"
            android:onClick="BackToShowActivity"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="22dp"
            android:gravity="center"/>

    </LinearLayout>

</LinearLayout>
