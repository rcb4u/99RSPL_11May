<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvUser_Nm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvProdct_Nm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtvBar_Code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtv_Mrp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtvS_Price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtvP_Price"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtv_Actve"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">


        <TextView
                android:id="@+id/rowtvP_Margin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Grand Total"
                android:textColor="#000000"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>