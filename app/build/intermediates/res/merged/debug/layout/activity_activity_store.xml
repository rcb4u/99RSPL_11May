<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ActivityProduct"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@id/layout_color"
    android:weightSum="100.0"
    android:background="#ff9033"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="100.0"
        android:layout_below="@+id/layer1"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Store Id"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView3"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:textColor="#000000"
                    android:ems="10"
                    android:id="@+id/Store_Storeid"
                    android:textSize="@dimen/smalltext"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Store Name"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView4"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <EditText


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_Name"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Address"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView11"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_Address1"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"

                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:textColor="#000000"
                    android:id="@+id/textView14"
                    android:textStyle="bold"
                    android:textSize="@dimen/smalltext"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="70dp"


                    />

                <EditText

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_city"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"

                    android:textColor="#000000"
                    android:id="@+id/textView12"
                    android:textStyle="bold"
                    android:textSize="@dimen/smalltext"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="80dp"

                    />
                <EditText

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_Zip"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >


                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Country"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView100"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    android:paddingLeft="10dp"

                    />
                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:hint="SRILANKA"
                    android:ems="10"
                    android:id="@+id/Store_Country"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Contact Name"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView19"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    android:paddingLeft="10dp"

                    />

                <EditText


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_Contact"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"


                    />

            </LinearLayout>








        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Email"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:id="@+id/textView5"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="30"
                    android:ems="10"
                    android:id="@+id/Store_Email"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"



                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Mobile *"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textView6"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="10"
                    android:ems="10"
                    android:id="@+id/Store_Mobile"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:clickable="true"
                    android:imeOptions="flagNoExtractUi"

                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Alternate Mobile "
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:id="@+id/textVieealtmobileno"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:maxLength="10"
                    android:ems="10"
                    android:id="@+id/Store_Mobile_Alter"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style"
                    android:imeOptions="flagNoExtractUi"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/textViewrelevant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="Footer"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />

                <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textColorHighlight="#Ffffff"
                    android:hint=""
                    android:ems="10"
                    android:id="@+id/Store_footer"
                    android:imeOptions="flagNoExtractUi"
                    android:textSize="20px"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/border_style" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="0.1"
                android:visibility="invisible"
                android:paddingRight="5dp"
                android:paddingTop="10dp"
                >

                <TextView
                    android:id="@+id/media"
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.0"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>



        </LinearLayout>
    </LinearLayout>




    <LinearLayout
        android:id="@id/product_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:id="@+id/Store_update_button"
            android:textColor="#000000"
            android:textSize="@dimen/textsize"
            android:text="UPDATE"
            android:background="@drawable/shapebuttonsales"
            android:layout_weight="1.5"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:text="EXIT"
            android:textSize="@dimen/textsize"
            android:textColor="#000000"
            android:id="@+id/Store_exit_button"
            android:background="@drawable/shapebuttonsales"
            android:layout_weight="1.5"
            />
    </LinearLayout>

</LinearLayout>