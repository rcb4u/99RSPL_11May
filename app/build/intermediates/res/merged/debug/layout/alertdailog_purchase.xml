                    android:inputType="text"
                    android:id="@+id/EnterInvoiceno"
                    android:hint="Please Enter LastInvoiceno"
                    android:background="@drawable/border_style"/>-->
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="300px"
            android:layout_height="50px"
            android:layout_marginLeft="55px"
            android:background="@drawable/border_style"
            android:id="@+id/VendororDistributorName"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="300px"
            android:layout_height="50px"
            android:layout_marginLeft="55px"
            android:background="@drawable/border_style"
            android:id="@+id/Last3InvoiceNo"
            android:layout_alignParentStart="true" />
        <Spinner
            android:layout_marginTop="20dp"
            android:layout_width="300px"
            android:layout_height="50px"
            android:layout_marginLeft="55px"
            android:background="@drawable/border_style"
            android:id="@+id/HoldPurchaseNo"
            android:layout_alignParentStart="true" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="125px"
                android:layout_marginLeft="55px"
                android:layout_height="50px"
                android:id="@+id/submitbtn"
                android:textColor="#000000"
                android:text=" SUBMIT "
                android:onClick="view"
                android:textSize="@dimen/Buttontextsize"
                android:background="@drawable/shapebutton_dialog"

                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="125px"
                android:layout_marginLeft="55px"
                android:layout_height="50px"
                android:id="@+id/submitbtnForHold"
                android:textColor="#000000"
                android:text=" SUBMIT "
                android:onClick="view"
                android:textSize="@dimen/Buttontextsize"
                android:background="@drawable/shapebutton_dialog"

                />
            <Button
                android:layout_marginTop="20dp"
                android:layout_width="125px"
                android:layout_marginLeft="50px"
                android:layout_height="50px"
                android:id="@+id/Cancelbtn"
                android:textColor="#000000"
                android:text="CANCEL "
                android:onClick="view"
                android:textSize="@dimen/Buttontextsize"
                android:background="@drawable/shapebutton_dialog"

                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>