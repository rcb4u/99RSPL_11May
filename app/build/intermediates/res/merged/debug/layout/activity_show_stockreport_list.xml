<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDailySalesReportListActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">



    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4a4a4a"
        android:weightSum="180.0"
        android:orientation="horizontal"
        android:gravity="center_vertical">


        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="USER NAME"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:id="@+id/tvNm"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="130dp"
            android:layout_height="30dp"
            android:text="PRODUCT NAME"
            android:textColor="#ffffff"
            android:layout_weight="55.0"
            android:id="@+id/tvId"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"

            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="BATCH NO"
            android:layout_weight="42.0"
            android:textColor="#ffffff"
            android:id="@+id/tvDesc"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"

            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="EXPIRY DATE"
            android:layout_weight="38.0"
            android:textColor="#ffffff"
            android:id="@+id/tvStart"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"

            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:text="QUANTITY"
            android:layout_weight="30.0"
            android:textColor="#ffffff"
            android:id="@+id/tvEnd"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_StockReport" />

    </LinearLayout>

</LinearLayout>
