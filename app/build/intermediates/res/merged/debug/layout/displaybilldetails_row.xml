<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">



        <TextView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="billno"
            android:textSize="@dimen/displaytextsize"
            android:gravity="left"
            android:textColor="#000000"
            android:layout_marginLeft="5dp"
            android:id="@+id/detailsbillno" />

        <TextView
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="mobileno"
            android:textSize="@dimen/displaytextsize"
            android:textColor="#000000"
            android:id="@+id/detailsmobileno" />


        <TextView
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/detailsbilldate" />

        <TextView
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/detailsbillamount" />

        <TextView
            android:layout_width="220dp"
            android:layout_height="40dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:textSize="@dimen/displaytextsize"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/detailsbiipaid" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="VIEW BILLS"
            android:textColor="#000000"
            android:textSize="@dimen/Buttontextsize"
            android:layout_marginLeft="140dp"
            android:src="@drawable/button_settle"
            android:id="@+id/viewbillButton" />



    </LinearLayout>
</LinearLayout>