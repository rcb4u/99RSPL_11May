    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:id="@+id/alertlayout"
        android:gravity="center"
        android:layout_weight="0.38">

        <Button
            android:layout_width="205px"
            android:layout_height="50px"
            android:id="@+id/Invoiceno"
            android:textColor="#ffffff"
            android:text="INVOICE NO"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:textSize="20px"
            android:onClick="view"
            android:layout_marginEnd="20px"
            android:background="@drawable/shapebutton_dialog"/>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="205px"
            android:textSize="20px"
            android:layout_height="50px"
            android:id="@+id/Noinvoice"
            android:textColor="#ffffff"
            android:text="WITHOUT INVOICE"
            android:onClick="View"
            android:layout_gravity="center"
            android:background="@drawable/shapebutton_dialog"
            android:layout_marginEnd="20px"
            />

        <EditText
            android:layout_marginTop="30px"
            android:layout_marginLeft="5px"
            android:layout_width="310px"
            android:textColor="#000000"
            android:layout_height="50px"
            android:inputType="text"
            android:textSize="@dimen/Edittextsize"
            android:layout_gravity="center"
            android:id="@+id/EnterInvoiceno"
            android:hint="Please Enter Invoiceno"
            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"
            />




