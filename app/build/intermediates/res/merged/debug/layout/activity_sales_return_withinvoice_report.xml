<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@id/layout_color"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Transaction Id"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.RSPL.POS.CustomAuto
            android:id="@+id/idTextView"
            android:layout_width="700dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:inputType="textAutoComplete"
            android:textSize="18px"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ,1234567890 "
            android:hint="Select Transaction Id"
            android:textColorHint="@color/hint_color"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/Layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Select From Date"
            android:textColor="#000000"
            android:id="@+id/from"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <Spinner
            android:id="@+id/TotalFromDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="18px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/TotalFromMonth"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:ems="10"
            android:textSize="18px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/TotalFromYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="18px"
            android:focusable="true"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Select To Date"
            android:textColor="#000000"
            android:id="@+id/to"
            android:ems="10"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            />

        <Spinner
            android:id="@+id/TotalToDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="18px"
            android:focusable="true"
            android:background="@drawable/border_style"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/TotalToMonth"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:ems="10"
            android:textSize="18px"
            android:focusable="true"
            android:background="@drawable/border_style"
            android:layout_marginEnd="5dp"
            android:layout_gravity="center_vertical"/>


        <Spinner
            android:id="@+id/TotalToYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:spinnerMode="dropdown"
            android:ems="10"
            android:textSize="18px"
            android:focusable="true"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginLeft="300dp"
        android:paddingBottom="4dp"
        android:id="@+id/layout4">

        <Button
            android:id="@+id/Submit"
            android:text="Submit"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="200dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent">

        </LinearLayout>

        <Button
            android:id="@+id/emailbtn"
            android:text="Email"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="200dp"
            android:layout_height="match_parent" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4a4a4a"
        android:weightSum="90"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="USER NAME"
            android:textColor="#ffffff"
            android:id="@+id/tvuser"
            android:textStyle="bold"
            android:layout_weight="30.0"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="135dp"
            android:layout_height="match_parent"
            android:text="TRANSACTION ID"
            android:textColor="#ffffff"
            android:id="@+id/tvid"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_weight="30.0"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="TOTAL"
            android:textColor="#ffffff"
            android:id="@+id/tvtotal"
            android:textStyle="bold"
            android:layout_weight="30.0"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:layout_weight="100.0"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_SalesReturnReport" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f2ede4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"



                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Total Items"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:weightSum="1.0"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"
                    android:id="@+id/ReportPurchasingTotalitem"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:gravity="left" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Grand Total"
                    android:textColor="#000000"
                    android:id="@+id/discount_text9"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:id="@+id/ReportPurchasingGrandTotal"
                    android:textStyle="normal"
                    android:textSize="@dimen/textsize"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>


