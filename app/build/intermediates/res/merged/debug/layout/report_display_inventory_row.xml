<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#2787A4"
    android:id="@+id/Sub">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:weightSum="180.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportUser_Nm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:paddingLeft="47dp"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportProd_Nm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="33.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportBatch_No"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="22.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/reportExp_Date"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_Qty"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text=" "
                android:textColor="#000000"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/report_month"
                android:layout_width="150px"
                android:layout_height="match_parent"
                android:text="0"
                android:textColor="#000000"
                android:textAlignment="viewEnd"
                android:textSize="@dimen/displaytextsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>