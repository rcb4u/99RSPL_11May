<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Sub"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#2787A4"
    android:weightSum="100.0">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="#ffffff"
        android:weightSum="150.0"
        android:orientation="horizontal"
        android:textAlignment="textStart">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/rowtvUser_Nm"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="user"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30.0"
                android:background="#ffffff">

        <TextView
            android:id="@+id/rowtvTri_Id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="id"
            android:textAlignment="viewEnd"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="30.0"
                    android:background="#ffffff">

        <TextView
            android:id="@+id/rowtvTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:textAlignment="viewEnd"
            android:text="total"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"/>

                    </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="32.0"
            android:background="#ffffff">

        <TextView
            android:id="@+id/rowtvSaleDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="center_vertical"
            android:text="date"
            android:textColor="#000000"
            android:textSize="@dimen/displaytextsize"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvCard_No"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:gravity="center_vertical"
                android:text="no"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"/>

        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:src="@drawable/ic_print_black_24dp"
            android:id="@+id/printbtn"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Details"
            android:id="@+id/View_Details" />

    </LinearLayout>

</LinearLayout>
