<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:id="@id/layout_color"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:text="GRN ID"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.RSPL.POS.CustomAuto
            android:id="@+id/DirectChequeIdTextView"
            android:layout_width="760dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="18px"
            android:hint="Select Grn Id"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-, "
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="Select From Date,Month And Year"
            android:textColor="#000000"
            android:id="@+id/from"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"/>

        <Spinner
            android:id="@+id/DaysFromDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/DaysFromMonth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/DaysFromYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="Select To Date,Month And Year"
            android:textColor="#000000"
            android:id="@+id/to"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <Spinner
            android:id="@+id/DaysToDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/DaysToMonth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/DaysToYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="12px"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="300.0"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">


            <TextView
                android:text="USER NAME"
                android:id="@+id/tvUserNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#4a4a4a">

            <TextView
                android:text="VENDOR NAME"
                android:id="@+id/tvDsbtrNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="27.0"
            android:background="#4a4a4a">

            <TextView
                android:text="PAID"
                android:id="@+id/tvDsbtrAmnt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="RECEIVED"
                android:id="@+id/tvDsbtrAmn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DUE"
                android:id="@+id/tvDsbtrAmunt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="BANK"
                android:id="@+id/tvBank"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="40.0"
            android:background="#4a4a4a">

            <TextView
                android:text="CHEQUE NO"
                android:id="@+id/tvCheque"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34.0"
            android:background="#4a4a4a">

            <TextView
                android:text="REASON"
                android:id="@+id/tvReason"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DATE"
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="DAYS"
                android:id="@+id/tvDays"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:fontFamily="sans_serif"
                android:layout_gravity="center"
                android:gravity="center_vertical"  />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:orientation="vertical"
        android:layout_weight="100"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_payByChequeReport" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:background="@drawable/keyboard_border"
            android:keyBackground="@drawable/keyboard_border"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout4">

        <Button
            android:id="@+id/Submit"
            android:text="Submit"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/emailbtn"
            android:text="Email"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>


    </LinearLayout>
</LinearLayout>

