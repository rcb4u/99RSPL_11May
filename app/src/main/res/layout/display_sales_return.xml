<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:paddingTop="2dp"
        android:paddingLeft="2dp"
        android:weightSum="9.0"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"

            android:inputType="number"
            android:textColor="#000000"
            android:text="product name"
            android:ems="10"
            android:id="@+id/prodname"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />
        Returnmrp
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="gone"
            android:inputType="number"
            android:textColor="#000000"
            android:text="product name"
            android:ems="10"
            android:id="@+id/Returnmrp"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />

        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:text="product name"
            android:ems="10"
            android:id="@+id/discountreturn"
            android:visibility="invisible"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceMedium"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="expdate"
            android:ems="10"
            android:id="@+id/expdate"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="batch"
            android:ems="10"
            android:id="@+id/batchno"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />



        <EditText
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="quantity"
            android:ems="10"
            android:id="@+id/quty"
            android:textSize="20px"
            android:maxLength="5"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"

            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="selling"
            android:ems="10"
            android:id="@+id/selling"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="discount"
            android:ems="10"
            android:id="@+id/discountsalereturn"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:inputType="number"
            android:textColor="#000000"
            android:text="selling"
            android:visibility="invisible"
            android:ems="10"
            android:id="@+id/stock"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="uom"
            android:ems="10"
            android:id="@+id/uom"
            android:textSize="20px"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:inputType="number"
            android:textColor="#000000"
            android:text="total"
            android:ems="10"
            android:id="@+id/totalpt"
            android:textSize="20px"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:layout_gravity="center_vertical"
            />

        <ImageButton

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:layout_gravity="center"
            android:background="#ffffff"
            android:src="@drawable/cross_arrow_icon"
            android:id="@+id/deleteButton" />

    </LinearLayout>



</LinearLayout>


