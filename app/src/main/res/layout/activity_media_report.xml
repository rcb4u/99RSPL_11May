<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.retail_99_solutions.Purchase_Page"
    android:orientation="vertical"
    android:background="#FF9033">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="90.0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/MediaReportmainAdvertsmnt"
            android:text="Main Advertisement Report"
            android:textColor="#000000"
            android:src="@drawable/mainadvt"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/MediaReportConSens1"
            android:text="Context Sensitive1 Report"
            android:textColor="#000000"
            android:src="@drawable/context1"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Context Sensitive2 Report"
            android:id="@+id/MediaReportConSens2"
            android:textColor="#000000"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:layout_weight="90.0"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/MediaReportLogoSpace1"
            android:text="Logo Space1 Report"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignParentTop="true"
            android:textColor="#000000"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/MediaReportLogoSpace2"
            android:text="Logo Space2 Report"
            android:textColor="#000000"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/MediaReportRetlrPayout"
            android:text="Retailer Payout Report"
            android:textColor="#000000"
            android:src="@drawable/retailerpayout"
            android:background="@drawable/imagebutton_layout"
            android:layout_alignTop="@+id/imageButton15"
            android:layout_toEndOf="@+id/imageButton15"
            android:layout_marginEnd="10dp"
            android:layout_weight="34.5"
            android:scaleType="fitCenter"/>
    </LinearLayout>
</LinearLayout>
