<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ShowDailySalesReportListActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4a4a4a"
        android:weightSum="150.0"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="PRODUCT"
            android:layout_weight="28.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvBatch"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="BATCH"
            android:layout_weight="25.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvExp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="EXPIRY"
            android:layout_weight="25.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvMrp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="MRP"
            android:layout_weight="25.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:layout_marginLeft="3dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQty"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="QTY"
            android:layout_weight="25.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:text="SALE DATE"
            android:layout_weight="25.0"
            android:textColor="#ffffff"
            android:textSize="@dimen/textsize"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_WithInvoiceReport" />

    </LinearLayout>

</LinearLayout>
