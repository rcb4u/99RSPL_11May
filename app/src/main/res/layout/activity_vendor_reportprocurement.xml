<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="40dp"
            android:text="Vendor Name"
            android:textColor="#000000"
            android:id="@+id/id"
            android:textStyle="bold"
            android:paddingLeft="7dp"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <com.RSPL.POS.CustomAuto
            android:id="@+id/VendorTextView"
            android:layout_width="760dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:inputType="textAutoComplete"
            android:textSize="@dimen/displaytextsize"
            android:hint="Select Vendor Name"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-, "
            android:textCursorDrawable="@drawable/color_cursor"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center_vertical"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="3dp"
        android:paddingBottom="2dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="Select From Date,Month And Year"
            android:textColor="#000000"
            android:id="@+id/from"
            android:paddingLeft="7dp"
            android:textStyle="bold"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <Spinner
            android:id="@+id/NoFromDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoFromMonth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoFromYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="10dp">

        <TextView
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:text="Select To Date,Month And Year"
            android:textColor="#000000"
            android:id="@+id/to"
            android:textStyle="bold"
            android:paddingLeft="7dp"
            android:ems="10"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left" />

        <Spinner
            android:id="@+id/NoToDate"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoToMonth"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

        <Spinner
            android:id="@+id/NoToYear"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="#000000"
            android:fontFamily="sans-serif"
            android:ems="10"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/displaytextsize"
            android:focusable="true"
            android:layout_marginEnd="5dp"
            android:background="@drawable/border_style"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#4a4a4a"
        android:weightSum="120.0"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:text="USER NAME"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvNm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical"  />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="24.0"
            android:background="#4a4a4a">

        <TextView
            android:text="PO NO"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvPoNo"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical"  />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:text="VENDOR NAME"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/tvVendNm"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

        <TextView
            android:text="TOTAL"
            android:id="@+id/tvTotal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_weight="97"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/lv_VendorReport"  />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttons_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f2ede4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"



                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:text="Total Items"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"

                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp"
                android:weightSum="1.0"

                >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="0"
                    android:paddingLeft="10dp"
                    android:textStyle="bold"
                    android:textColor="#4A4A4A"
                    android:id="@+id/ReportPurchasingTotalitem"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="sans-serif"
                    android:gravity="left" />

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="Grand Total"
                    android:textColor="#4A4A4A"
                    android:id="@+id/discount_text9"
                    android:textSize="@dimen/textsize"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:text="0.00"
                    android:textColor="#000000"
                    android:id="@+id/ReportPurchasingGrandTotal"
                    android:textStyle="bold"
                    android:textSize="@dimen/textsize"
                    android:singleLine="true"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        >

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:background="@drawable/keyboard_border"
            android:keyBackground="@drawable/keyboard_border"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1.0"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:id="@+id/layout4">

        <Button
            android:id="@+id/Submit"
            android:text="Submit"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>

        <Button
            android:id="@+id/emailbtn"
            android:text="Email"
            android:textSize="@dimen/textsize"
            android:background="@drawable/shapebuttonsales"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"/>


    </LinearLayout>
</LinearLayout>

