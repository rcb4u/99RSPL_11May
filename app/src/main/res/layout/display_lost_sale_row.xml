<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Sub"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#ffffff"
    android:weightSum="100.0">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:weightSum="150.0"
        android:background="#ffffff"
        android:orientation="horizontal"
        android:textAlignment="textStart">





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvProdNm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="name"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"/>

        </LinearLayout>





        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvSPrice"
                android:layout_width="100px"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="mrp"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="18px"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/rowtvQty"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="right"
                android:text="qty"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"/>

        </LinearLayout>

        <!-- <LinearLayout
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="40.0"
             android:background="#ffffff">

             <TextView
                 android:id="@+id/rowtvGrn_Total"
                 android:layout_width="170px"
                 android:layout_height="fill_parent"
                 android:gravity="right"
                 android:text="total"
                 android:textAlignment="viewEnd"
                 android:textColor="#000000"
                 android:textSize="@dimen/displaytextsize"/>

         </LinearLayout>-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/total"
                android:layout_width="170px"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25.0"
            android:background="#ffffff">

            <TextView
                android:id="@+id/saledate"
                android:layout_width="170px"
                android:layout_height="fill_parent"
                android:gravity="right"
                android:text="0"
                android:textAlignment="viewEnd"
                android:textColor="#000000"
                android:textSize="@dimen/displaytextsize"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>