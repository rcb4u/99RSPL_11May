    </LinearLayout>



    <LinearLayout
        android:id="@+id/buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:paddingTop="10dp"

        >

        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="CREATE"
            android:textSize="15px"
            android:id="@+id/doct_ok_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1.0"
            android:layout_marginEnd="1dp"
            android:background="@drawable/shapebutton_dialog"

            />
        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="CLEAR"
            android:textSize="15px"
            android:id="@+id/doct_clear_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1.0"
            android:layout_marginEnd="1dp"

            android:background="@drawable/shapebutton_dialog"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:text="EXIT"
            android:textSize="15px"
            android:id="@+id/doct_Exit_button"
            android:textColor="#FFFFFF"
            android:layout_weight="1.0"
            android:background="@drawable/shapebutton_dialog"

            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:id="@+id/autolay2"
        android:paddingRight="20dp"
        android:visibility="invisible"
        android:layout_marginTop="1dp"


        >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="Discount"
            android:textColor="#000000"
            android:id="@+id/searchtiew2"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="left"
            android:paddingLeft="60dp"
            />
        <EditText
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="0.6"
            android:singleLine="true"
            android:maxLength="6"
            android:inputType="numberDecimal"
            android:completionThreshold="1"

            android:textColor="#000000"
            android:textSize="14px"
            android:id="@+id/localdisct"

            android:background="@drawable/border_style"
            android:imeOptions="flagNoExtractUi"
            >
        </EditText>

    </LinearLayout>




</LinearLayout>

