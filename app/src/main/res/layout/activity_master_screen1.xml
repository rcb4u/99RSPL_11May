            <!--android:layout_alignParentStart="true"-->
            <!--android:layout_marginEnd="5dp"-->
            <!--android:layout_weight="12.5"-->
            <!--android:scaleType="fitCenter"-->
            <!--android:background="@drawable/imagebutton_layout"-->


            <!--/>-->


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50.0"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="horizontal"
        android:id="@+id/layer3"
        >

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/systemsetting_button"
            android:src="@drawable/systemsettings"
            android:background="@drawable/imagebutton_layout"
            android:layout_marginEnd="5dp"
            android:layout_weight="12.5"
            android:scaleType="fitCenter"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/systemsupport_button"
            android:src="@drawable/maintainence"
            android:layout_marginEnd="5dp"
            android:layout_weight="12.5"
            android:background="@drawable/imagebutton_layout"
            android:scaleType="fitCenter"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/report_button"
            android:src="@drawable/report"
            android:background="@drawable/imagebutton_layout"
            android:layout_weight="12.5"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"

            />

