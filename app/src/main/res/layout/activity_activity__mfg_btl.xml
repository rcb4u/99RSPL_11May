<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff9033">
    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f44336"
                android:paddingTop="5dp"
                >
                <TextView
                    android:layout_width="100px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:text="MFG NAME"
                    android:focusable="false"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:id="@+id/productname"
                    android:textSize="14px"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="130px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:focusable="false"
                    android:fontFamily="sans-serif"
                    android:text="TARGET AMOUNT"
                    android:ems="10"
                    android:id="@+id/batchno"
                    android:textSize="14px"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="140px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:focusable="false"
                    android:text="BTL DESC"
                    android:ems="10"
                    android:id="@+id/expirydate"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
                <!--  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.29"
                      android:inputType="number"
                      android:textColor="#ffffff"
                      android:text="P PRICE"
                      android:ems="10"
                      android:id="@+id/pprice"
                      android:textSize="12px"
                      android:fontFamily="sans-serif"
                      android:layout_gravity="center_vertical"
                      />-->
                <TextView
                    android:layout_width="130px"
                    android:layout_height="25px"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:text="TARGET VALUE"
                    android:focusable="false"
                    android:ems="10"
                    android:id="@+id/sprice"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:layout_width="150px"
                    android:layout_height="25px"
                    android:focusable="false"
                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:text="START DATE"
                    android:ems="10"
                    android:id="@+id/quantity"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="150px"
                    android:layout_height="25px"

                    android:inputType="numberDecimal"
                    android:textColor="#000000"
                    android:focusable="false"
                    android:text="END DATE"
                    android:ems="10"
                    android:id="@+id/stock"
                    android:textSize="14px"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />
                <!--  <TextView
                      android:layout_width="0dp"
                      android:layout_height="wrap_content"
                      android:layout_weight="0.2"
                      android:inputType="number"
                      android:textColor="#ffffff"
                      android:text="AMOUNT"
                      android:ems="10"
                      android:id="@+id/amount"
                      android:textSize="12px"
                      android:fontFamily="sans-serif"
                      android:layout_gravity="center_vertical"
                      />
  -->


            </LinearLayout>
            <LinearLayout
                android:id="@+id/buttons_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10.0"
                android:focusable="false"

                android:orientation="horizontal"
                >
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/mfglistView"
                    android:layout_weight="10.0"
                    android:focusable="false"
                    android:layout_centerHorizontal="true"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>


