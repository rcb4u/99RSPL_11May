    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:id="@+id/Hiddenlayout"
        android:visibility="gone"
        android:layout_weight="40"
        android:paddingLeft="70dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp">

            <TextView
                android:layout_width="305px"
                android:layout_height="35px"
                android:text="Mobile Number *"
                android:textColor="#000000"
                android:id="@+id/textView1"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="60dp"
                />

            <EditText
                android:layout_width="255px"
                android:layout_height="45px"
                android:inputType="number"
                android:textColor="#000000"
                android:ems="10"
                android:maxLength="10"
                android:id="@+id/Cust_mobileno"
                android:textSize="@dimen/Edittextsize"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="5dp"

            >

            <TextView
                android:layout_width="305px"
                android:layout_height="30px"
                android:text="Customer Name *"
                android:textColor="#000000"
                android:id="@+id/textView2"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="60dp"
                />

            <EditText
                android:layout_width="255px"
                android:layout_height="45px"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:ems="10"
                android:id="@+id/Cust_name"
                android:textSize="@dimen/Edittextsize"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="5dp"

            >

            <TextView
                android:layout_width="305px"
                android:layout_height="35px"
                android:text="Email"
                android:textColor="#000000"
                android:id="@+id/textViewemail"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="60dp"
                />

            <EditText
                android:layout_width="255px"
                android:layout_height="45px"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:ems="10"
                android:id="@+id/Cust_email"
                android:textSize="@dimen/Edittextsize"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingRight="30dp"
            android:paddingTop="5dp"

            >

            <TextView
                android:layout_width="305px"
                android:layout_height="35px"
                android:text="Address"
                android:textColor="#000000"
                android:id="@+id/textView"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="60dp"
                />

            <EditText
                android:layout_width="255px"
                android:layout_height="45px"
                android:inputType="textEmailAddress"
                android:textColor="#000000"
                android:ems="10"
                android:id="@+id/Cust_adress_sales_create"
                android:textSize="@dimen/Edittextsize"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_style"
                android:imeOptions="flagNoExtractUi"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="30dp"
            android:paddingTop="5dp"

            >
            <TextView
                android:layout_width="305px"
                android:layout_height="35px"
                android:text="Credit Customer"
                android:textColor="#000000"
                android:id="@+id/textViewCREDIT1"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center_vertical"
                android:gravity="left"
                android:paddingLeft="60dp"
                />

            <Spinner
                android:layout_width="255px"
                android:layout_height="45px"
                android:textColor="#000000"
                android:ems="10"
                android:id="@+id/Cust_Credithidden"
                android:textSize="14px"
                android:layout_gravity="center"

                />

        </LinearLayout>
