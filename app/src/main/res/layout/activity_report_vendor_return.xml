<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:id="@id/layout_color"
   android:layout_weight="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="4dp"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Vendor Return Id "
            android:textColor="#000000"
            android:id="@+id/id1"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_weight="0.6"/>

        <com.RSPL.POS.CustomAuto
            android:id="@+id/reprtRetrnIdTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginEnd="10dp"
            android:inputType="textAutoComplete"
            android:textSize="@dimen/textsize"
            android:background="@drawable/border_style"
            android:focusable="true"
            android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890-, "
            android:hint="Select Vendor Return Id"
            android:textColorHint="@color/hint_color"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.4"
            android:imeOptions="flagNoExtractUi"
            />

    </LinearLayout>
</LinearLayout>

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="10.0">


        <TextView
            android:text="USER"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvUserNm"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="VENDOR"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrNm"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="REASON"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvNm"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="PRODUCT"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvName"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="BATCH NO"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrNo"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="EXP DATE"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrDate"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="PRICE"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrPrice"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="QTY"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtr"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="UOM"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrUnit"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:text="TOTAL"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvDsbtrTotal"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="80"
        android:id="@+id/layout3"
        android:textColor="#000000">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:id="@+id/lv_vendorReturnReport" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="1.0"
        android:layout_gravity="bottom">

        <android.inputmethodservice.KeyboardView
            android:id="@+id/keyboard_report"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:focusable="true"
            android:layout_gravity="bottom"
            android:focusableInTouchMode="true"
            android:visibility="visible"
            android:background="@drawable/keyboard_border"
            android:keyBackground="@drawable/keyboard_border"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_weight="5"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"


        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/shapebuttonsales"
            android:inputType="number"
            android:textColor="#000000"
            android:text="Email"
            android:id="@+id/emailbtn"
            android:textSize="@dimen/textsize"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_background"
            />
    </LinearLayout>



</LinearLayout>