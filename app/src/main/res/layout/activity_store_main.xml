<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_weight="15"
        android:layout_height="30dp"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:weightSum="180.0"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="USER NAME"
            android:id="@+id/userNm"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="ADVT ID"
            android:id="@+id/tvId"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="ADVT DESC"
            android:id="@+id/tvNm"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="AD SLB1"
            android:id="@+id/tvSLB1"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="AD SLB2"
            android:id="@+id/tvSLB2"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

        <TextView
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:text="AD SLB3"
            android:id="@+id/tvSLB3"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14dp"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_storemain" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="20"
        android:layout_below="@+id/layout3"
        android:paddingTop="3px"
        android:paddingBottom="2px"

        >
        <Button
            android:layout_width="225px"
            android:layout_height="40px"
            android:layout_weight="20"
            android:background="#009985"
            android:inputType="number"
            android:textColor="#000000"
            android:text="Email"
            android:focusable="false"
            android:ems="10"
            android:id="@+id/emailbtn"
            android:textSize="20px"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:src="@drawable/button_background"
            android:onClick="view"
            />
    </LinearLayout>

</LinearLayout>

