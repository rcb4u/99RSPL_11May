<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_weight="10.0"
    android:background="#fffdd0">


<LinearLayout
    android:layout_width="275px"
    android:layout_height="332px"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"


        >
        <TextView android:layout_width="110px"
            android:layout_height="20px"
            android:gravity="center"
            android:text="NOW PLAYING"
            android:textSize="15px"
            android:paddingTop="5dp"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <TextView android:layout_width="156px"
            android:layout_height="19px"
            android:gravity="center"
            android:text="CENTERFRESHSHOCK"
            android:textSize="14px"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"


        >


        <Button
            android:layout_width="110px"
            android:layout_height="60px"
            android:id="@+id/product_update_butt"
            android:background="@drawable/add1"
            android:layout_marginEnd="5dp"
            android:textColor="#FFFFFF"/>
        <!--android:layout_weight="1.6"-->
        />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <TextView android:layout_width="39px"
            android:layout_height="14px"
            android:gravity="center"
            android:text="KELLOGES"
            android:textSize="10px"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="1dp"

            >

        <Button
            android:layout_width="110px"
            android:layout_height="60px"
            android:textColor="#FFFFFF"

            android:id="@+id/product_exit07"
            android:background="@drawable/kelogsadd"
            android:layout_marginEnd="5dp"
            />
            </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <TextView android:layout_width="35px"
            android:layout_height="14px"
            android:gravity="center"
            android:text="VASELINE"
            android:textSize="10px"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <Button
            android:layout_width="110px"
            android:layout_height="60px"
            android:textColor="#FFFFFF"
            android:id="@+id/pro"
            android:background="@drawable/add2"
            android:layout_marginEnd="5dp"
            />

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <TextView android:layout_width="35px"
            android:layout_height="14px"
            android:gravity="center"
            android:text="LAKME LIPLOVE"
            android:textSize="10px"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="1dp"

        >
        <Button
            android:layout_width="110px"
            android:layout_height="60px"
            android:textColor="#FFFFFF"
            android:id="@+id/liplovebtn"
            android:background="@drawable/liplove"
            android:layout_marginEnd="5dp"
            />

    </LinearLayout>





</LinearLayout>
</LinearLayout>
