<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">

    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="180.0"
        android:paddingTop="5dp"
        android:background="#4a4a4a"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:gravity="center_vertical"
        android:paddingBottom="2dp">


        <TextView
            android:text="Advertise Id"
            android:id="@+id/tvStoreMainAd_Main_Id"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView

            android:text="Advertise Number"
            android:id="@+id/tvStoreMainAd_Text"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="Advertiser Name"
            android:id="@+id/tvStoreMainAd_Name"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="AD Cost Slb1"
            android:id="@+id/tvStoreMainAd_Cst_Slb1"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="AD Cost Slb2"
            android:id="@+id/tvStoreMainAd_Cst_Slb2"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />

        <TextView
            android:text="AD Cost Slb3"
            android:id="@+id/tvStoreMainAd_Cst_Slb3"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:textColor="#ffffff"
            android:layout_weight="30.0"
            android:textStyle="bold"
            android:textSize="14px"
            android:layout_gravity="center"
            android:gravity="center" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1">

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_Loyaltyreport" />
    </LinearLayout>

</LinearLayout>
