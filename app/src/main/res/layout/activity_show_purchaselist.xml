<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:clickable="false"
    android:weightSum="100.0"
    android:background="#ff9033"
    android:divider="@android:color/background_light">



    <LinearLayout
        android:id="@+id/linearlayout1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#4a4a4a"
        android:weightSum="150.0"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="36.0"
            android:background="#4a4a4a">


            <TextView
                android:text="PRODUCT NAME"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/tvtotal"
                android:textStyle="bold"
                android:paddingLeft="7dp"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="P PRICE"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/tvtot"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="26.0"
            android:background="#4a4a4a">

            <TextView
                android:text="QTY"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/tvQty"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="35.0"
            android:background="#4a4a4a">

        <TextView
            android:text="PURCHASE DATE"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#ffffff"
            android:id="@+id/tvdate"
            android:textStyle="bold"
            android:textSize="@dimen/textsize"
            android:fontFamily="sans_serif"
            android:layout_gravity="center"
            android:gravity="center_vertical" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="30.0"
            android:background="#4a4a4a">

            <TextView
                android:text="UOM"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="#ffffff"
                android:id="@+id/tvuom"
                android:textStyle="bold"
                android:textSize="@dimen/textsize"
                android:layout_gravity="center"
                android:gravity="center_vertical" />

            </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:id="@+id/layout3"
        android:textColor="#000000"
        android:layout_below="@+id/linearlayout1"
        >

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textColor="#ffffff"
            android:id="@+id/lv_PurchaseProduct" />
    </LinearLayout>

</LinearLayout>
