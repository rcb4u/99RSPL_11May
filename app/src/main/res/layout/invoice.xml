<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="#ff9033">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.8"

            >



            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >

                <TextView
                    android:layout_width="800px"
                    android:layout_height="65px"
                    android:inputType="number"
                    android:textColor="#9B9B9B"
                    android:text="POS CUSTOMER"
                    android:fontFamily="sans-serif-thin"
                    android:ems="10"
                    android:id="@+id/product_Prodid"
                    android:textSize="24px"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/cust"
                    android:background="@drawable/border_style" />



            </LinearLayout>



            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#4a4a4a"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"


                >



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="ITEM NUMBER"
                    android:ems="10"
                    android:fontFamily="sans-serif"
                    android:id="@+id/product1"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.25"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif"
                    android:text="QUANTITY"
                    android:ems="10"
                    android:id="@+id/product2"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.29"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="COST PRICE"
                    android:ems="10"
                    android:id="@+id/productexp"
                    android:textSize="14px"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />



                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.2"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:text="TOTAL"
                    android:ems="10"
                    android:id="@+id/product8"
                    android:textSize="14px"
                    android:fontFamily="sans-serif"
                    android:layout_gravity="center_vertical"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10.0"
                android:orientation="horizontal"
                >

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/listView"
                    android:layout_weight="10.0"
                    android:layout_centerHorizontal="true"
                    />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#f2ede4"


                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"



                        >

                        <TextView
                            android:layout_width="74px"
                            android:layout_height="14px"
                            android:layout_weight="0.7"
                            android:text="Total Items"
                            android:textColor="#4A4A4A"
                            android:id="@+id/discount_text"
                            android:textSize="14px"
                            android:fontFamily="sans-serif-medium"
                            android:layout_gravity="center_vertical"
                            android:gravity="left"

                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:weightSum="1.0"

                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:text="789"
                            android:textStyle="bold"
                            android:textColor="#4A4A4A"
                            android:id="@+id/discount_textt"
                            android:textSize="14px"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="sans-serif"
                            android:gravity="left"


                            />



                    </LinearLayout>
                </LinearLayout>







                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.5"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"

                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="Sub Total"
                            android:textColor="#000000"
                            android:id="@+id/discount_text9"
                            android:textSize="14px"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:fontFamily="sans-serif-medium"
                            />



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1.0"
                        android:padding="5dp"
                        >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.0"
                            android:text="789"
                            android:textColor="#000000"
                            android:id="@+id/discount_textt10"
                            android:textStyle="normal"
                            android:textSize="14px"
                            android:layout_gravity="center_vertical"
                            android:gravity="right"
                            android:fontFamily="sans-serif"

                            />



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/buttons_layout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1.0"
                    android:background="#009985"


                    >


                    <TextView
                        android:layout_width="339px"
                        android:layout_height="50px"
                        android:layout_weight="0.5"
                        android:inputType="number"
                        android:textColor="#000000"
                        android:text="Clear"
                        android:ems="10"
                        android:id="@+id/um1"
                        android:textSize="24px"
                        android:gravity="center"
                        android:fontFamily="sans-serif-thin"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>



