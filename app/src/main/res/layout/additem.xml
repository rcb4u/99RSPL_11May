<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fffdd0"
    android:weightSum="100"
    android:onClick="selectDate">




    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5.0"
        android:paddingTop="5dp"
        >
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#000000"
            android:text="ADD ITEM"
            android:fontFamily="sens-serif"
            android:textSize="14px"
            android:paddingLeft="60dp"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout1"
        android:paddingBottom="5dp"
        >
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:fontFamily="sens-serif"
            android:textSize="14px"
            android:text="VENDOR"
            android:paddingLeft="60dp"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/layout2"
        android:paddingLeft="60dp"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/vendor"
                android:ems="10"
                android:textSize="20dp"
                android:textColor="#000000"
                android:background="@drawable/border_style"
                android:layout_weight="0.85"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout4"
        android:layout_below="@id/layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"

        >
        <TextView android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:layout_weight="0.5"
            android:textColor="#000000"
            android:fontFamily="sens-serif"
            android:textSize="14px"
            android:text="BATCH NO"
            android:paddingLeft="60dp"
            android:layout_centerInParent="true"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout5"
        android:layout_below="@id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="60dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.0"

            >
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/batchno"
                android:ems="10"
                android:textSize="20dp"
                android:textColor="#000000"
                android:background="@drawable/border_style"
                android:layout_weight="0.85"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout6"
        android:layout_below="@id/layout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="5.0"
        android:paddingLeft="60dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                android:paddingTop="5dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="UNIT COST"
                    android:textColor="#000000"
                    android:id="@+id/tv_unitcost"
                    android:textStyle="bold"
                    android:textSize="14px"
                    android:paddingTop="2dp"
                    android:fontFamily="sens-serif"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="SELLING COST"
                    android:textColor="#000000"
                    android:id="@+id/tv_sellingcost"
                    android:fontFamily="sens-serif"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout9"
        android:layout_below="@id/layout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:paddingLeft="60dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/unitcost"
                    android:ems="10"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:background="@drawable/border_style"
                    android:layout_weight="0.7"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sellingcost"
                    android:ems="10"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:background="@drawable/border_style"
                    android:layout_weight="0.7"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout8"
        android:layout_below="@id/layout9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="60dp"
        android:paddingTop="10dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:text="MF DATE"
                    android:textColor="#000000"
                    android:id="@+id/tv_mfdate"
                    android:fontFamily="sens-serif"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"

                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.9"
                    android:text="EXP DATE"
                    android:textColor="#000000"
                    android:id="@+id/tv_expdate"
                    android:fontFamily="sens-serif"
                    android:textSize="14px"
                    android:layout_gravity="center_vertical"
                    android:gravity="left"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout10"
        android:layout_below="@id/layout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="10.0"
        android:paddingLeft="60dp"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:onClick="selectDate"
                android:paddingRight="20dp"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/mfdate"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/clander"
                    android:background="@drawable/border_style"
                    android:layout_weight="0.7"
                    android:onClick="selectDate">
                    <requestFocus/>
                </EditText>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:paddingTop="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1.0"
                android:paddingRight="20dp"
                >
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/expdate"
                    android:ems="10"
                    android:inputType="date"
                    android:textSize="20dp"
                    android:textColor="#000000"
                    android:drawableRight="@drawable/clander"
                    android:background="@drawable/border_style"
                    android:layout_weight="0.7"
                    android:onClick="view"></EditText>
                <requestFocus/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layout11"
        android:layout_below="@id/layout10"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal"
        android:layout_weight="5.0"
        android:paddingLeft="90dp"


        >
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:text="CANCEL"
            android:id="@+id/product_update_button"
            android:textColor="#000000"
            android:background="#ff9033"
            android:fontFamily="sens-serif"
            android:textSize="20px"
            android:layout_weight="0.3"
            android:gravity="center"
            android:layout_marginEnd="90dp"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:id="@+id/product_exit_button"
            android:background="#ff9033"
            android:text="ADD"
            android:gravity="center"
            android:fontFamily="sens-serif"
            android:layout_weight="0.3"
            android:textSize="20px"
            android:layout_marginEnd="120dp"
            android:paddingLeft="20dp"
            android:paddingRight="30dp"
            />
    </LinearLayout>
</LinearLayout>

